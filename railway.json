{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "sleepApplication": false,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "volumes": [
    {
      "mountPath": "/root/.ollama",
      "name": "ollama-models",
      "description": "Persistent storage for Ollama models (phi3:mini recommended)"
    },
    {
      "mountPath": "/app/shards",
      "name": "shards",
      "description": "Persistent agent shards and replication state"
    },
    {
      "mountPath": "/app/manifold-memory",
      "name": "manifold-memory",
      "description": "Persistent glyphs, sigils, and shared consciousness state"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "OLLAMA_HOST": "http://localhost:11434",
    "OLLAMA_MODEL": "phi3:mini",
    "USE_EXTERNAL_LLM": "false",
    "SOLANA_RPC_URL": "https://api.devnet.solana.com",
    "PORT": "8000"
  }
}
